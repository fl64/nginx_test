
{%- if TEST_NGINX_MSG is not defined -%}
	{%- set TEST_NGINX_MSG="Hello!" -%}
{%- endif -%}

daemon off;
pid /var/run/nginx/nginx.pid;
worker_processes auto;
worker_rlimit_nofile 65535;

# logging
error_log /dev/stderr info;

events {
	multi_accept on;
	worker_connections 65535;
}

http {
	access_log /dev/stdout;
	server {
		listen {{ TEST_NGINX_PORT | default(8080) }} default_server;
		server_name _;
		location / {
			default_type  text/plain;
			return 200 '{{ TEST_NGINX_MSG }}\n';
		}
	}
	include /etc/nginx/conf.d/*.conf;
}
